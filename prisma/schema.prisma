generator client {
  provider = "prisma-client-js"
}

datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model flyway_schema_history {
  installed_rank Int      @id
  version        String?
  description    String
  type           String
  script         String
  checksum       Int?
  installed_by   String
  installed_on   DateTime @default(now())
  execution_time Int
  success        Boolean

  @@index([success], name: "flyway_schema_history_s_idx")
}

model member {
  id                Int       @id @default(autoincrement())
  given_name        String?
  family_name       String?
  gender            String?
  dob               DateTime?
  registration_date DateTime?
}

model news {
  id             Int              @id @default(autoincrement())
  created_date   DateTime
  publish_date   DateTime
  title          String
  body           String
  news_attribute news_attribute[]
  news_comment   news_comment[]
}

model news_attribute {
  id      Int     @id @default(autoincrement())
  news_id Int
  name    String
  value   String?
  news    news    @relation(fields: [news_id], references: [id])

  @@index([news_id], name: "idx_e65fb03ab5a459a0")
}

model news_comment {
  id      Int     @id @default(autoincrement())
  news_id Int
  author  String?
  body    String
  news    news    @relation(fields: [news_id], references: [id])

  @@index([news_id], name: "idx_c3904e8ab5a459a0")
}

model page {
  id    Int    @id @default(autoincrement())
  title String
  slug  String
  body  String
}

model user {
  id          Int     @id
  external_id String? @unique
  email       String  @unique
  given_name  String?
  family_name String?
  roles       Json
}
